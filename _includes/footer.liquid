{% capture footer_contents %}
  &copy; Copyright {{ site.time | date: '%Y' }}
  {{ site.first_name }}
  {{ site.middle_name }}
  {{ site.last_name }}. {{ site.footer_text }}
  {% if site.impressum_path %}
    <a href="{{ site.url }}{{ site.baseurl }}{{ site.impressum_path }}">Impressum</a>.
  {% endif %}
  {% if site.last_updated %}
    Last updated: {{ 'now' | date: '%B %d, %Y' }}.
  {% endif %}
{% endcapture %}

{% if site.footer_fixed %}
  <footer class="fixed-bottom{% if page.layout == 'home' %} no-border{% endif %}" role="contentinfo">
    <div class="container mt-0">
      {% unless page.layout == 'home' %}
        {{ footer_contents }}
      {% endunless %}
    </div>
  </footer>
{% else %}
  <footer class="sticky-bottom mt-5{% if page.layout == 'home' %} no-border{% endif %}" role="contentinfo">
    {% if site.newsletter.enabled %}
      {% include newsletter.liquid %}
    {% endif %}

    <div class="container">
      {% unless page.layout == 'home' %}
        {{ footer_contents }}
      {% endunless %}
    </div>
  </footer>
{% endif %}

{% comment %}
  {% if site.footer_fixed %}
    <footer class="fixed-bottom" role="contentinfo">
      <div class="container mt-0">
        {{ footer_contents }}
      </div>
    </footer>
  {% else %}
    <footer class="sticky-bottom mt-5" role="contentinfo">
      {% if site.newsletter.enabled %}
        {% include newsletter.liquid %}
      {% endif %}

      <div class="container">
        {{ footer_contents }}
      </div>
    </footer>
  {% endif %}
{% endcomment %}
