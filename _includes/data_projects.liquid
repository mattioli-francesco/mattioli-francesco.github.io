<div class="col">
  <a href="{% if data_project.redirect %}{{ data_project.redirect }}{% else %}{{ data_project.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      {% if data_project.img %}
        {%
          include figure.liquid
          loading="eager"
          path=data_project.img
          sizes="250px"
          alt="data thumbnail"
          class="card-img-top"
        %}
      {% endif %}
      <div class="card-body">
        <h2 class="card-title">{{ data_project.title }}</h2>
        <p class="card-text">{{ data_project.description }}</p>
        <div class="row ml-1 mr-1 p-0">
          {% if data_project.github %}
            <div class="github-icon">
              <div class="icon" data-toggle="tooltip" title="Code Repository">
                <a href="{{ data_project.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
              </div>
              {% if data_project.github_stars %}
                <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                  <i class="fa-solid fa-star"></i>
                  <span id="{{ data_project.github_stars }}-stars"></span>
                </span>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </a>
</div>